<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBasic"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:text="정보 입력"
        android:textColor="@color/colorAccent"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="85dp"
        android:text="앱에서 사용할 이름을 입력해주세요."
        android:textSize="15sp"
        tools:ignore="SmallSp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="이름"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:maxLength="7"
        android:maxLines="1"
        android:textSize="15sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/buttonSetUserInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="55dp"
        android:backgroundTint="@color/colorAccent"
        android:stateListAnimator="@null"
        android:text="완료"
        android:textColor="@color/colorBasic"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="현재 로그인 된 계정" />

    <TextView
        android:id="@+id/textViewMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textViewLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/logoutButton"
        android:textColor="@color/colorWarning" />

</LinearLayout>