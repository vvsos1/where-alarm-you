<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_alarms">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/item_alarm_textViewAmPm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="오전"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_alarm_textViewAmPm"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@id/item_alarm_textViewAmPm"
            android:text="·"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_alarm_textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_alarm_textViewAmPm"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@id/item_alarm_textViewAmPm"
            android:text="모닝콜"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_alarm_textViewHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_alarm_textViewAmPm"
            android:text="11"
            android:textColor="#000"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/item_alarm_textViewUnused1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_alarm_textViewHours"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/item_alarm_textViewHours"
            android:text="시"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_alarm_textViewMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_alarm_textViewHours"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/item_alarm_textViewUnused1"
            android:text="18"
            android:textColor="#000"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/item_alarm_textViewUnused2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_alarm_textViewHours"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/item_alarm_textViewMinutes"
            android:text="분"
            android:textColor="#000"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_alarm_textViewHours"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_alarm_textViewSun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="일"
                android:textColor="#777"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_alarm_textViewMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="월"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_alarm_textViewTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="화"
                android:textColor="#777"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_alarm_textViewWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="수"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_alarm_textViewThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="목"
                android:textColor="#777"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_alarm_textViewFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="금"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_alarm_textViewSat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="토"
                android:textColor="#777"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@id/item_alarm_switch"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_location" />

                <TextView
                    android:id="@+id/item_alarm_textViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="장소"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_group" />

                <TextView
                    android:id="@+id/item_alarm_textViewGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="그룹"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Switch
            android:id="@+id/item_alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:switchPadding="20dp"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/item_alarm_switch"
            android:background="#777" />
    </RelativeLayout>
</FrameLayout>