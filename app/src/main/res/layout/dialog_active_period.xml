<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="활성 기간 선택"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dialog_set_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="시작 날짜 선택"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dialog_set_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="종료 날자 선택"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_days_cancel_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edge"
            android:gravity="center"
            android:text="취소"
            android:textColor="#933"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dialog_days_accept_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edge"
            android:gravity="center"
            android:text="확인"
            android:textColor="#339"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>