<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemAlarmAdd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iconAlarmAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/titleAlarmAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iconAlarmAdd"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iconAlarmAdd"
        android:text="Title"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/detailAlarmAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/titleAlarmAdd"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/titleAlarmAdd"
        android:text="Detail"
        android:textSize="15dp"/>

    <FrameLayout
        android:id="@+id/contentAlarmAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleAlarmAdd"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>
</RelativeLayout>