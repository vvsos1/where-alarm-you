<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarmAddDay_linearDays"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/alarmAddDay_button_set_dates"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_baseline_today_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="날짜 선택"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_margin="50dp"
            android:background="#AAA" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/alarmAddDay_button_set_days"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_week" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="기간 선택"
                android:textSize="20dp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alarmAddDay_textView_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text=""
            android:textSize="20dp" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_baseline_subdirectory_arrow_left_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarmAddDay_days_button_SUN"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_transparent"
                android:gravity="center"
                android:text="일"
                android:textSize="20dp" />

            <View
                android:id="@+id/alarmAddDay_days_click_SUN"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#0000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarmAddDay_days_button_MON"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_transparent"
                android:gravity="center"
                android:text="월"
                android:textSize="20dp" />

            <View
                android:id="@+id/alarmAddDay_days_click_MON"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#0000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarmAddDay_days_button_TUE"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_transparent"
                android:gravity="center"
                android:text="화"
                android:textSize="20dp" />

            <View
                android:id="@+id/alarmAddDay_days_click_TUE"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#0000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarmAddDay_days_button_WED"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_transparent"
                android:gravity="center"
                android:text="수"
                android:textSize="20dp" />

            <View
                android:id="@+id/alarmAddDay_days_click_WED"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#0000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarmAddDay_days_button_THU"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_transparent"
                android:gravity="center"
                android:text="목"
                android:textSize="20dp" />

            <View
                android:id="@+id/alarmAddDay_days_click_THU"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#0000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarmAddDay_days_button_FRI"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_transparent"
                android:gravity="center"
                android:text="금"
                android:textSize="20dp" />

            <View
                android:id="@+id/alarmAddDay_days_click_FRI"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#0000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/alarmAddDay_days_button_SAT"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_transparent"
                android:gravity="center"
                android:text="토"
                android:textSize="20dp" />

            <View
                android:id="@+id/alarmAddDay_days_click_SAT"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#0000" />
        </FrameLayout>


    </LinearLayout>


</LinearLayout>


