<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/alarmAddTime_linearLayoutSetAMPM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alarmAddTime_buttonAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오전" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:backgroundTint="#000"
            android:layout_margin="50dp"/>

        <Button
            android:id="@+id/alarmAddTime_buttonPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alarmAddTime_linearLayoutSetHours"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <EditText
            android:id="@+id/alarmAddTime_editTextHours"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alarmAddTime_linearLayoutSetMinutes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <EditText
            android:id="@+id/alarmAddTime_editTextMinutes"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
</FrameLayout>